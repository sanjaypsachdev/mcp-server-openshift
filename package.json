{
  "name": "mcp-server-openshift",
  "version": "1.1.0",
  "description": "MCP server for OpenShift operations and management with comprehensive tools for cluster management, application deployment, and secure route creation",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-openshift": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js",
    "start:http": "node dist/index.js --http",
    "start:sse": "node dist/index.js --sse --port=3000",
    "dev:http": "tsx src/index.ts --http",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepack": "npm run build",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "mcp",
    "openshift",
    "kubernetes",
    "container",
    "orchestration",
    "devops",
    "model-context-protocol",
    "ai-assistant",
    "cluster-management",
    "cloud-native",
    "redhat",
    "oc-cli"
  ],
  "author": {
    "name": "Sanjay Sachdev",
    "email": "sanjaypsachdev@gmail.com",
    "url": "https://github.com/sanjaypsachdev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanjaypsachdev/mcp-server-openshift.git"
  },
  "bugs": {
    "url": "https://github.com/sanjaypsachdev/mcp-server-openshift/issues"
  },
  "homepage": "https://github.com/sanjaypsachdev/mcp-server-openshift#readme",
  "files": [
    "dist/",
    "manifest.json",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.7.0",
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
